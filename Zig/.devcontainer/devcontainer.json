{
    "name": "Zig Dev Container",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
    },
    "workspaceMount": "type=bind,src=${localWorkspaceFolder},dst=${localWorkspaceFolder}",
    "workspaceFolder": "${localWorkspaceFolder}",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "zig.zigPath": "/usr/local/bin/zig",
        "emeraldwalk.runonsave": {
            "commands": [
                {
                    "match": "\\.zig$",
                    "cmd": "zig fmt ${file}",
                }
            ]
        }
    },
    "extensions": [
        "tiehuis.zig",
        "vadimcn.vscode-lldb",
        "emeraldwalk.runonsave",
        "mutantdino.resourcemonitor",
    ],
}